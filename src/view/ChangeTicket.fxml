<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ChangeTicketController">
   <children>
      <HBox>
         <children>
            <Label prefWidth="80.0" text="URL">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="tfUrl" alignment="TOP_LEFT">
               <HBox.margin>
                  <Insets bottom="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="10.0">
         <children>
            <Label prefWidth="80.0" text="Check With">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="tfCheckWith">
               <HBox.margin>
                  <Insets bottom="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="110.0">
         <children>
            <Label prefWidth="80.0" text="Info">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="tfInfo">
               <HBox.margin>
                  <Insets bottom="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox layoutX="20.0" layoutY="90.0">
         <children>
            <Label prefWidth="80.0" text="Software">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="tfSoftware">
               <HBox.margin>
                  <Insets bottom="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox layoutX="20.0" layoutY="125.0">
         <children>
            <Label prefWidth="80.0" text="Prio">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="tfPrio">
               <HBox.margin>
                  <Insets bottom="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox layoutX="20.0" layoutY="160.0">
         <children>
            <Label prefWidth="80.0" text="Is Done">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <CheckBox fx:id="cbIsDone" mnemonicParsing="false">
               <HBox.margin>
                  <Insets bottom="10.0" />
               </HBox.margin>
            </CheckBox>
         </children>
      </HBox>
      <Button fx:id="btnAdd" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#updateTicket" prefWidth="80.0" text="Change" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
